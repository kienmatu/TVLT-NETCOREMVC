@model IEnumerable<Post>
@{
    ViewData["Title"] = "Home Page";
    //ANCHOR HELPER 
}

<div class="text-center">
  
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card">
                    <img class="card-img-top" src="@item.AvatarImage" alt="@item.PostTitle">
                    <div class="card-body">
                        <h5 class="card-title"><a href="/post/@SlugGenerator.SlugGenerator.GenerateSlug(item.PostTitle)-@item.ID"> @item.PostTitle </a></h5>
                        <p class="card-text">@item.PostTeaser</p>
                    </div>
                </div>
            </div>
        }</div>

    </div>
